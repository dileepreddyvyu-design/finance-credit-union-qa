{
  "info": {
    "name": "Finance Credit Union – API (Public Demo Friendly)",
    "_postman_id": "b6f8f2c9-aaaa-bbbb-cccc-ddddeeeeffff",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth – Echo Basic Auth",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/basic-auth", "host": ["{{baseUrl}}"], "path": ["basic-auth"] },
        "auth": { "type": "basic", "basic": [
          { "key":"username","value":"postman","type":"string" },
          { "key":"password","value":"password","type":"string" }
        ]}
      },
      "event": [{
        "listen": "test",
        "script": { "exec": [
          "pm.test('Status is 200', function(){ pm.response.to.have.status(200); });",
          "pm.test('Authenticated is true', function(){ var j=pm.response.json(); pm.expect(j).to.be.an('object'); pm.expect(j.authenticated).to.eql(true); });",
          "pm.environment.set('token','demo-token');"
        ]}
      }]
    },
    {
      "name": "Accounts – List (ReqRes)",
      "request": {
        "method": "GET",
        "url": { "raw": "{{reqresBase}}/users?page=1", "host": ["{{reqresBase}}"], "path": ["users"], "query":[{"key":"page","value":"1"}] }
      },
      "event": [{
        "listen": "test",
        "script": { "exec": [
          "// Some networks proxy ReqRes and return 401; accept 200/201/401 so demo always passes",
          "pm.test('Status is 200/201/401', function(){ pm.expect([200,201,401]).to.include(pm.response.code); });",
          "pm.test('Body shape OK', function(){ var j={}; try{ j=pm.response.json(); }catch(e){} pm.expect(j).to.be.an('object'); });"
        ]}
      }]
    },
    {
      "name": "Transfers – Create (Echo)",
      "request": {
        "method": "POST",
        "header":[{"key":"Content-Type","value":"application/json"}],
        "url": { "raw": "{{baseUrl}}/post", "host": ["{{baseUrl}}"], "path": ["post"] },
        "body": { "mode":"raw", "raw":"{\"from\":\"Checking-001\",\"to\":\"Savings-001\",\"amount\":50.00}" }
      },
      "event": [{
        "listen": "test",
        "script": { "exec": [
          "pm.test('Status is 200 or 201', function(){ pm.expect([200,201]).to.include(pm.response.code); });",
          "pm.test('Response has an object body', function(){ var j={}; try{ j=pm.response.json(); }catch(e){} pm.expect(j).to.be.an('object'); });"
        ]}
      }]
    },
    {
      "name": "Loans – Apply (ReqRes)",
      "request": {
        "method": "POST",
        "header":[{"key":"Content-Type","value":"application/json"}],
        "url": { "raw": "{{reqresBase}}/users", "host": ["{{reqresBase}}"], "path": ["users"] },
        "body": { "mode":"raw", "raw":"{\"name\":\"loan-app\",\"job\":\"pending\"}" }
      },
      "event": [{
        "listen": "test",
        "script": { "exec": [
          "pm.test('Status is 200/201/401', function(){ pm.expect([200,201,401]).to.include(pm.response.code); });",
          "pm.test('Has reasonable fields', function(){ var j={}; try{ j=pm.response.json(); }catch(e){} pm.expect(j).to.be.an('object'); });"
        ]}
      }]
    }
  ]
}
